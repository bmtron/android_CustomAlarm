<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MathProblems">

    <TextView
        android:id="@+id/mathQuestion"
        android:layout_width="333dp"
        android:layout_height="37dp"
        android:text="What is (8 * 8) * 1000 + (4 * 100) - 5 + (100 / 4) + (50 / 5 * 500)?"
        app:layout_constraintBottom_toTopOf="@+id/usrAnswer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.493" />

    <EditText
        android:id="@+id/usrAnswer"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="88dp"
        app:layout_constraintBottom_toTopOf="@+id/btnAlarmOff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mathQuestion"
        android:inputType="number"
        />

    <Button
        android:id="@+id/btnAlarmOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turn off alarm"
        app:layout_constraintTop_toBottomOf="@+id/usrAnswer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>